<%- include('partials/header') %>
       
       <div class="ui main text container segment"  style="margin-top: 7.0em;">
        <div class="ui huge header">
          <p><%= blog.title %></p>
          <div class="ui top attached ">
            <div class="item">
               <img class="ui centered rounded image" src="<%= blog.image %>" alt="">
               <div class="content">
                 <span> <%= blog.created.toDateString() %></span>
               </div>
            </div>
          </div>
        </div>
        <p> <%= blog.body %></p>
        <a id="delete" class="ui black  button" href="/blogs/<%=blog._id %>/edit">Edit</a>
        <form id="delete" action="<%=blog._id %>?_method=DELETE" method="POST">
          <button id="delete" class="ui black button">delete</button>
     </form>
        </div>

       <%- include('partials/footer') %>