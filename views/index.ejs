<%- include('partials/header') %>
<div class="ui main container">
  <div class="ui huge header">Blog page!!</div>
  <div class="ui top attached segment">
<div class="ui divided items">
        <%blogs.forEach(function(blogs){ %>
          <div class="item">
            <div class="image">
               <img src="<%= blogs.image %>" alt="">
            </div>
          </div>
        <div>
          <div class="content">
           <a class="header" href="/blogs/<%=blogs._id %>"> <%= blogs.title %></a> 
           <div class="meta">
              <span> <%= blogs.created.toDateString() %></span>
           </div>
           <div class="description">
              <p> <%= blogs.body.substring(0, 100) %>...</p>
           </div>
           <div class="extra">
            <a class="ui floated basic violet button" href="/blogs/<%=blogs._id %>"> 
              Read More
              <i class="right chevron icon"></i></a>
            </a> 
           </div>
          </div>
         
         
        
        
       
</div>

  </div>
</div>



  
    
  </div>
 <% }) %>

 
 <%- include('partials/footer') %>